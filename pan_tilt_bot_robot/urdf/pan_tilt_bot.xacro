<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find pan_tilt_bot_robot)/urdf/pan_tilt_bot.material.xacro" />

  <xacro:macro name="pan_tilt_bot" params="parent *origin">
    <link name="j1_link">
      <inertial>
        <origin rpy="0 0 0" xyz="-5.549338143508866e-15 0.011937164947263951 0.019605935309866387"/>
        <mass value="0.34009000706899195"/>
        <inertia ixx="9.4e-05" ixy="-0.0" ixz="0.0" iyy="5.5e-05" iyz="0.0" izz="8.2e-05"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <link name="j1_horn_link">
      <inertial>
        <origin rpy="0 0 0" xyz="7.323601717155284e-17 -3.584248942771506e-07 0.0027880990797749597"/>
        <mass value="0.016309929358964557"/>
        <inertia ixx="3e-06" ixy="-0.0" ixz="-0.0" iyy="1e-06" iyz="0.0" izz="4e-06"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0.0 -0.000319 -0.038"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j1_horn.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0 -0.000319 -0.038"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j1_horn.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <link name="j2_link">
      <inertial>
        <origin rpy="0 0 0" xyz="-0.010999999999994571 0.016393706265213467 0.02038147662781581"/>
        <mass value="0.34009000706899195"/>
        <inertia ixx="9.4e-05" ixy="0.0" ixz="-0.0" iyy="8.2e-05" iyz="0.0" izz="5.5e-05"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="-0.011 0.016681 -0.0465"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="-0.011 0.016681 -0.0465"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <link name="j2_horn_link">
      <inertial>
        <origin rpy="0 0 0" xyz="7.674625448279525e-16 -0.019000358424909176 0.03767262835995369"/>
        <mass value="0.05331898839844395"/>
        <inertia ixx="3.2e-05" ixy="-0.0" ixz="0.0" iyy="2e-05" iyz="-0.0" izz="1.9e-05"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="-0.0 -0.019319 -0.0785"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j2_horn.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="-0.0 -0.019319 -0.0785"/>
        <geometry>
          <mesh filename="package://pan_tilt_bot_robot/meshes/j2_horn.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <joint name="origin_to_j1" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="j1_link" />
      <axis xyz="0 0 1" />
    </joint>

    <joint name="j1" type="revolute">
      <origin rpy="0 0 1.5708" xyz="0.0 0.000319 0.038"/>
      <parent link="j1_link"/>
      <child link="j1_horn_link"/>
      <axis xyz="-0.0 -0.0 -1.0"/>
      <limit effort="100" lower="-2.96706" upper="2.96706" velocity="100"/>
    </joint>

    <joint name="j1_horn_to_j2" type="fixed">
      <origin rpy="0 0 0" xyz="0.011 -0.017 0.0085"/>
      <parent link="j1_horn_link"/>
      <child link="j2_link"/>
    </joint>

    <joint name="j2" type="revolute">
      <origin rpy="0 0 0" xyz="-0.011 0.036 0.032"/>
      <parent link="j2_link"/>
      <child link="j2_horn_link"/>
      <axis xyz="-0.0 -1.0 -0.0"/>
      <limit effort="100" lower="-2.1" upper="2.1" velocity="100"/>
    </joint>

  </xacro:macro>
</robot>
